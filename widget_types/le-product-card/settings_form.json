{
  "content": [
    {
      "items": [
        {
          "name":"engrave_link",
          "label":"Ссылка на правила гравировки",
          "type":"link",
          "value": "/"
        },
        {
          "name":"show_availability",
          "label":"Показывать наличие в магазине и доставку",
          "type":"checkbox",
          "value": false
        },
        {
          "name":"max_engrave_length",
          "label":"Максимальная длина гравировки",
          "type":"number",
          "value": 10
        },
        {
          "name":"delivery_duration",
          "label":"Время доставки",
          "type":"number",
          "value": 3
        }  
      ]
    }
  ],
  "design": [
    {
      "type": "group",
      "name": "{{ messages.stylization }}",
      "items": [
        {
          "name": "rating-color",
          "label": "{{ messages.rating_color }}",
          "value": "",
          "type": "color",
          "help": "{{ messages.rating_color_help }}"
        },
        {
          "class": "range",
          "name": "sticker-font-size",
          "label": "{{ messages.sticker_font_size }} (rem)",
          "min": 0.7,
          "max": 1.5,
          "step": 0.1,
          "type": "number",
          "with_btns": true,
          "help": "{{ messages.rem_helper }}",
"unit": "rem"
        }
      ]
    },
    {
      "type": "group",
      "name": "{{ messages.mod_buttons_settings }}",
      "items": [
        {
          "class": "range",
          "name": "padding-button-vert",
          "label": "{{ messages.padding_top_bottom  }} (px)",
          "min": 0.8,
          "max": 20.8,
          "step": 0.5,
          "type": "number",
          "with_btns": true,
          "help": "{{ messages.px_helper }}",
"unit": "px"
        },
        {
          "class": "range",
          "name": "padding-button-hor",
          "label": "{{ messages.padding_right_left }} (px)",
          "min": 0.5,
          "max": 30,
          "step": 0.5,
          "type": "number",
          "with_btns": true,
          "help": "{{ messages.px_helper }}",
"unit": "px"
        }
      ]
    },
    {
      "type": "group",
      "name": "{{ messages.buy_button_settings }}",
      "items": [
        {
          "class": "range",
          "name": "controls-btn-width-size",
          "label": "{{ messages.width }} (px)",
          "min": 300,
          "max": 450,
          "step": 10,
          "type": "number",
          "with_btns": true,
          "help": "{{ messages.px_helper }}",
"unit": "px"
        },
        {
          "class": "range",
          "name": "controls-height-xl",
          "label": "{{ messages.height }} (px)",
          "min": 40,
          "max": 60,
          "step": 0.5,
          "type": "number",
          "with_btns": true,
          "help": "{{ messages.px_helper }}",
"unit": "px"
        },
        {
          "class": "range",
          "name": "controls-font-size-xl",
          "label": "{{ messages.font_size_primary }} (px)",
          "min": 14,
          "max": 30,
          "step": 0.5,
          "type": "number",
          "with_btns": true,
          "help": "{{ messages.px_helper }}",
"unit": "px"
        }
      ]
    },
    {
      "type": "group",
      "name": "{{ messages.gallery_images }}",
      "items": [
        {
          "class": "checkbox",
          "name": "video-before-image",
          "label": "{{ messages.video_before_image }}",
          "value": null,
          "type": "checkbox",
          "enable_server_reload": true
        },
        {
          "class": "range",
          "name": "img-ratio",
          "label": "{{ messages.image_ratio }}",
          "min": 0.5,
          "max": 2,
          "step": 0.1,
          "type": "number",
          "with_btns": true
        },
        {
          "class": "select",
          "name": "img-fit",
          "options": [
            [
              "{{ messages.maintain_proportions }}",
              "contain"
            ],
            [
              "{{ messages.stretch_entire_block }}",
              "cover"
            ]
          ],
          "label": "{{ messages.image_size }}",
          "type": "select"
        }
      ]
    },
    {
      "type": "group",
      "name": null,
      "items": [
        {
          "name": "manager-photo",
          "label": "{{ messages.review_manager_photo }}",
          "value": null,
          "type": "file"
        }
      ]
    },
    {
      "type": "group",
      "name": "{{ messages.background }}",
      "items": [
        {
          "name": "bg",
          "label": "{{ messages.widget_background_color }}",
          "value": "",
          "type": "color",
          "clearable": true
        },
        {
          "class": "checkbox",
          "name": "layout-wide-bg",
          "label": "{{ messages.wide_background }}",
          "value": null,
          "type": "checkbox"
        }
      ]
    },
    {
      "type": "group",
      "name": "{{ messages.indentation }}",
      "items": [
        {
          "class": "range",
          "name": "layout-pt",
          "min": 0,
          "max": 10,
          "step": 0.5,
          "label": "{{ messages.padding_top }} (vw)",
          "type": "number",
          "with_btns": true,
          "help": "{{ messages.vw_helper }}",
"unit": "vw"
        },
        {
          "class": "range",
          "name": "layout-pb",
          "min": 0,
          "max": 10,
          "step": 0.5,
          "label": "{{ messages.padding_bottom }} (vw)",
          "type": "number",
          "with_btns": true,
          "help": "{{ messages.vw_helper }}",
"unit": "vw"
        }
      ]
    },
    {
      "type": "group",
      "name": "{{ messages.content }}",
      "items": [
        {
          "class": "number",
          "name": "layout-content-max-width",
          "min": 900,
          "max": 2000,
          "label": "{{ messages.content_max_width }} (px)",
          "type": "number",
          "help": "{{ messages.px_helper }}",
"unit": "px",
          "hide_mobile": true
        },
        {
          "class": "checkbox",
          "name": "layout-wide-content",
          "label": "{{ messages.wide_content }}",
          "value": null,
          "type": "checkbox",
          "hide_mobile": true
        },
        {
          "class": "checkbox",
          "name": "layout-edge",
          "label": "{{ messages.remove_padding_at_edges }}",
          "value": null,
          "type": "checkbox"
        }
      ]
    },
    {
      "type": "group",
      "name": "{{ messages.adaptive }}",
      "items": [
        {
          "class": "checkbox",
          "name": "hide-desktop",
          "label": "{{ messages.hide_desktop }}",
          "value": null,
          "type": "checkbox"
        },
        {
          "class": "checkbox",
          "name": "hide-mobile",
          "label": "{{ messages.hide_mobile }}",
          "value": null,
          "type": "checkbox"
        }
      ]
    }
  ]
}
