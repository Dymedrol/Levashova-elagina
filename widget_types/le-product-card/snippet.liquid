<div class="le-product">
  <form action="{{ cart_url }}" method="post" data-product-id="{{ product.id }}" class="le-product-main-form">

    <div class="le-product-header-mobile">
      <div class="le-product-header-mobile-info">
        <div class="le-product-header-mobile-info__sku">
          <span data-product-card-sku='{
            "skuLabel": "SKU: "
          }'></span>
        </div>
        <div class="le-product-header-mobile-info__title">
          <span>{{ product.title }}</span>
          <svg width="22" height="19" viewBox="0 0 22 19" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M19.2839 11.2778C20.2478 9.75021 21.3108 7.66801 20.9629 5.10053C20.731 3.39466 19.8613 1.9339 18.5133 0.99059C17.2232 0.0868974 15.6336 -0.217635 14.1527 0.156222C12.3722 0.604354 11.1449 2.07007 10.5893 3.29067L10.5144 3.45408L10.4395 3.29067C9.88388 2.07007 8.65664 0.60683 6.87616 0.156222C6.46305 0.0522351 6.04028 0.000242007 5.61751 0.000242007C4.53038 0.000242007 3.44567 0.339436 2.51558 0.99059C1.16754 1.9339 0.297834 3.39466 0.0683293 5.10053C-0.281967 7.66553 0.781002 9.75021 1.74492 11.2778C3.65827 14.3132 7.03077 16.7693 9.33548 17.9478C10.0602 18.3192 10.9734 18.3192 11.6909 17.9478C13.9956 16.7693 17.3682 14.3132 19.2839 11.2778ZM11.5049 17.5542C11.1957 17.7126 10.855 17.7918 10.5144 17.7918C10.1738 17.7918 9.83556 17.7126 9.52392 17.5542C7.26511 16.4004 3.96749 13.9988 2.10005 11.0377C1.1772 9.57443 0.157711 7.58383 0.486265 5.16243C0.701274 3.58035 1.50575 2.22852 2.75232 1.35454C3.60753 0.755382 4.59561 0.440947 5.61268 0.440947C6.00404 0.440947 6.393 0.487988 6.77228 0.584547C8.75327 1.08467 10.0506 3.04309 10.3042 4.20922C10.326 4.30825 10.4129 4.38005 10.512 4.38005C10.611 4.38005 10.698 4.30825 10.7198 4.20922C10.9734 3.04309 12.2707 1.08467 14.2517 0.584547C15.6167 0.240401 17.0831 0.520174 18.2717 1.35454C19.5183 2.22605 20.3227 3.57787 20.5377 5.16243C20.8663 7.58383 19.8492 9.57443 18.924 11.0377C17.0565 13.9988 13.7565 16.3979 11.5001 17.5542H11.5049Z" fill="black"/>
          </svg>
        </div>
        <div class="le-product-header-mobile-info__price" id="product-price-mobile"></div>
      </div>
      <div class="le-product-header-mobile-gallery">
        {% if product.images.size > 0 %}
            {% for image in product.images %}
              <img src="{{ image | image_url: 600, format: 'webp', resizing_type: 'fit_width' }}" alt="{{ product.title }}" class="le-product-header-mobile-gallery__item">
            {% endfor %}
        {% endif %}
      </div>
    </div>

    <div class="container">
      <div class="le-product-inner">
        <div class="le-product-col1">
          {% if product.images.size > 0 %}
            {% for image in product.images %}
              <img src="{{ image | image_url: 1340, format: 'webp', resizing_type: 'fit_width' }}" loading="lazy" alt="{{ product.title }}" class="le-product-gallery__item">
            {% endfor %}
          {% endif %}
        </div>
        <div class="le-product-col2">
          <div class="le-product-header">
            <div class="le-product-header__sku">
              <span data-product-card-sku='{
                "skuLabel": "SKU: "
              }'></span>
            </div>
            <div class="le-product-header__title">
              <span>{{ product.title }}</span>
              <svg xmlns="http://www.w3.org/2000/svg" width="54" height="46" viewBox="0 0 54 46" fill="none">
                <path d="M49.0739 28.4492C51.5005 24.6037 54.1763 19.362 53.3006 12.8987C52.7168 8.60443 50.5274 4.92716 47.1339 2.55251C43.8864 0.27759 39.8847 -0.489028 36.1567 0.452104C31.6746 1.58022 28.5852 5.26995 27.1864 8.34266L26.9979 8.75401L26.8094 8.34266C25.4106 5.26995 22.3212 1.58645 17.8391 0.452104C16.7992 0.190333 15.7349 0.0594471 14.6706 0.0594471C11.9339 0.0594471 9.20331 0.913322 6.86191 2.55251C3.46841 4.92716 1.27905 8.60443 0.701306 12.8987C-0.180518 19.3558 2.49536 24.6037 4.9219 28.4492C9.73848 36.0905 18.2283 42.2733 24.0301 45.24C25.8546 46.1749 28.1534 46.1749 29.9596 45.24C35.7614 42.2733 44.2513 36.0905 49.0739 28.4492ZM29.4913 44.249C28.7129 44.6479 27.8554 44.8474 26.9979 44.8474C26.1404 44.8474 25.289 44.6479 24.5045 44.249C18.8182 41.3446 10.5169 35.2989 5.81589 27.8447C3.49274 24.1612 0.926312 19.1501 1.7534 13.0545C2.29466 9.07188 4.31982 5.66884 7.45789 3.46871C9.61076 1.96041 12.0981 1.16886 14.6584 1.16886C15.6437 1.16886 16.6228 1.28728 17.5776 1.53036C22.5645 2.78935 25.8302 7.71939 26.4688 10.655C26.5235 10.9043 26.7425 11.085 26.9918 11.085C27.2412 11.085 27.4601 10.9043 27.5148 10.655C28.1534 7.71939 31.4192 2.78935 36.406 1.53036C39.8421 0.664016 43.5336 1.36831 46.5257 3.46871C49.6638 5.66261 51.689 9.06564 52.2302 13.0545C53.0573 19.1501 50.497 24.1612 48.1678 27.8447C43.4667 35.2989 35.1593 41.3384 29.4792 44.249H29.4913Z" fill="black"/>
              </svg>
            </div>
            <div class="le-product-header__price" data-product-card-price id="product-price-desktop"></div>
          </div>

          {% if product.available %}
            <div class="le-product-form">             

              {% if product.show_variants? %}

                <select name="variant_id" data-product-variants='{"default": "custom-span"}'>
                  {% for variant in product.variants %}
                    <option value="{{ variant.id }}">{{ variant.title | escape }}</option>
                  {% endfor %}
                </select>

                <script type="text/template" data-template-id="custom-span">
                  <div class="<%= classes.option %> is-span le-product-form-item">
                    <div class="<%= classes.label %> le-product-form-item__title"><%= title %></div>
                    <div class="<%= classes.values %> le-product-form-item-controls">
                      <% if (title === 'Цвет') { %>
                        <% values.forEach(function (value){ %>
                          <button class="<%= value.classes.all %> is-span le-product-form-item-controls__button product-option-btn"
                            <%= value.controls %>
                            <%= value.state %>
                          >
                            <%= value.title %>
                            <span class="le-product-form-item-controls__button_color <%= value.title %>"></span>
                          </button>
                        <% }) %>
                      <% } else { %>
                        <% values.forEach(function (value){ %>
                          <button class="<%= value.classes.all %> is-span le-product-form-item-controls__button product-option-btn"
                            <%= value.controls %>
                            <%= value.state %>
                          >
                            <%= value.title %>
                          </button>
                        <% }) %>
                      <% } %>
                    </div>
                  </div>
                </script>
              {% else %}
                <input type="hidden" name="variant_id" value="{{product.variants.first.id}}" >
              {% endif %}

              {% unless product.is_bundle %}
                {% if product.accessories.size > 0 %}

                  <div class="le-product-form-item le-product-form-item_engrave">
                      <div class="le-product-form-item__title">
                          ГРАВИРОВКА
                      </div>
                      <div class="le-product-form-item-controls le-product-form-item-controls_engrave">
                          <div class="le-product-form-item-controls__button le-product-form-item-controls__button_engrave">+ <span id="product-accessory-price"></span></div>
                          <input maxlength="{{ widget_settings.max_engrave_length }}" class="le-product-form-item-controls__input_engrave" type="text" name="engrave" id="engrave" placeholder="текст">
                          <a href="{{ widget_settings.engrave_link }}" class="le-product-form-item-controls-link_engrave">правила гравировки</a>
                      </div>
                  </div>

                  <div class="product__area-accessorie" style="display: none;">
                    <div data-product-accessories></div>
                  </div>
            
                  <template data-product-accessories-template>
                    <div
                      class="accessory-item"
                      data-product-accessories-item
                    >
                      <div class="accessory-name">
                        <strong>
                          <span data-product-accessory-name></span>
                        </strong>
            
                        <span data-product-accessory-minmax-count='{
                          "minCountMessage": "{{ messages.from }}",
                          "maxCountMessage": "{{ messages.to }}"
                        }'></span>
                      </div>
            
                      <div class="accessory-values" data-product-accessory-values></div>
            
                      <div
                        data-product-accessory-error='{
                          "lessThenMinCount": "Выбрано меньше минимального количества",
                          "moreThenMaxCount": "Выбрано больше максимального количества",
                          "scrollEnabled": "true"
                        }'
                        class="accessory-item__error"
                      ></div>
                    </div>
                  </template>
            
                  <template data-product-accessory-values-template>
                    <label
                      class="accessory-values__item"
                      data-product-accessory-values-item
                      data-product-accessory-values-item-id
                    >
                      <span data-product-accessory-values-item-name></span> (+<span data-product-accessory-values-item-price></span>)
                    </label>
                  </template>
                {% endif %}
              {% endunless %}

              <input type="text" name="comment" value="" style="display: none;">

              <div class="le-product-form-item" id="product-form-submit">
                <button type="submit" data-item-add class="le-product-form__submit">Добавить в корзину</button>
              </div>

              <div class="le-product-notice">
                <div class="le-product-notice__field">
                  <input
                    type="email"
                    class="le-product-notice__input"
                    placeholder="введите вашу почту"
                  >
                </div>
                <button type="button" class="le-product-notice__button">
                  сообщить о поступлении
                </button>
              </div>

            </div>
          {% else %}
            <div class="le-product-notice">
              <div class="le-product-notice__field">
                <input
                  type="email"
                  class="le-product-notice__input"
                  placeholder="введите вашу почту"
                >
              </div>
              <button type="button" class="le-product-notice__button">
                сообщить о поступлении
              </button>
            </div>
          {% endif %}

          <div class="le-product-accordion">

            {% if product.fields.Detali.value != '' %}
              <div class="le-product-accordion__item">
                <div class="le-product-accordion__item-header">
                  {{ product.fields.Detali.title }}
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="26" viewBox="0 0 16 26" fill="none">
                    <path d="M2 10.5L8 16.5L14 10.5" stroke="black"/>
                  </svg>
                </div>
                <div class="le-product-accordion__item-content">{{ product.fields.Detali.value }}</div>
              </div>
            {% endif %}

            {% if product.fields.chto_vklyucheno.value != '' %}
              <div class="le-product-accordion__item">
                <div class="le-product-accordion__item-header">
                  {{ product.fields.chto_vklyucheno.title }}
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="26" viewBox="0 0 16 26" fill="none">
                    <path d="M2 10.5L8 16.5L14 10.5" stroke="black"/>
                  </svg>
                </div>
                <div class="le-product-accordion__item-content">{{ product.fields.chto_vklyucheno.value }}</div>
              </div>
            {% endif %}

            {% if widget_settings.show_availability %}
              <div class="le-product-accordion__item">
                <div class="le-product-accordion__item-header">
                  наличие в магазине и доставка
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="26" viewBox="0 0 16 26" fill="none">
                    <path d="M2 10.5L8 16.5L14 10.5" stroke="black"/>
                  </svg>
                </div>
                <div class="le-product-accordion__item-content">
                  <p id="warehouse"></p>
                  <p id="delivery-date-wrapper">Ориентировочная дата доставки: <span id="delivery-date"></span></p>
                  <script> 
                    window.variantQuantity = {
                      {% for variant in product.variants %}
                        {{ variant.id }}: {{ variant.quantity_at_warehouses | replace: '=>', ': ' }},
                      {% endfor %}
                    }
                    window.deliveryDuration = {{ widget_settings.delivery_duration }};
                  </script>
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
    
  </form>
</div>


