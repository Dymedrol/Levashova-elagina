{
    "content": [
      {
        "items": [
          {
            "class": "text",
            "name": "title",
            "label": "{{ messages.title }}",
            "value": null,
            "type": "text",
            "general": true
          }
        ]
      }
    ],
    "design": [
      {
        "type": "group",
        "name": "{{ messages.group_size }}",
        "items": [
          {
            "class": "range",
            "name": "slide-width",
            "label": "{{ messages.product_item_min_width }} (px)",
            "min": 200,
            "max": 500,
            "step": 10,
            "help": "{{ messages.px_helper }}",
  "unit": "px",
            "type": "number",
            "with_btns": true,
            "enable_server_reload": true
          },
          {
            "class": "range",
            "name": "slide-gap",
            "label": "{{ messages.horizontal_space_between_cards }}",
            "min": 0,
            "max": 100,
            "step": 5,
            "type": "number",
            "with_btns": true,
            "enable_server_reload": true
          }
        ]
      },
      {
        "type": "group",
        "name": "{{ messages.picture }}",
        "items": [
          {
            "class": "range",
            "name": "img-ratio",
            "label": "{{ messages.image_ratio }}",
            "min": 0.5,
            "max": 2,
            "step": 0.1,
            "type": "number",
            "with_btns": true
          },
          {
            "class": "select",
            "name": "img-fit",
            "options": [
              [
                "{{ messages.maintain_proportions }}",
                "contain"
              ],
              [
                "{{ messages.stretch_entire_block }}",
                "cover"
              ]
            ],
            "label": "{{ messages.image_size }}",
            "type": "select"
          }
        ]
      },
      {
        "type": "group",
        "name": "{{ messages.background }}",
        "items": [
          {
            "name": "bg",
            "label": "{{ messages.widget_background_color }}",
            "value": "",
            "type": "color",
            "clearable": true,
            "enable_server_reload": true
          },
          {
            "class": "checkbox",
            "name": "layout-wide-bg",
            "label": "{{ messages.wide_background }}",
            "value": null,
            "type": "checkbox"
          }
        ]
      },
      {
        "type": "group",
        "name": "{{ messages.indentation }}",
        "items": [
          {
            "class": "range",
            "name": "layout-pt",
            "min": 0,
            "max": 10,
            "step": 0.5,
            "label": "{{ messages.padding_top }} (vw)",
            "type": "number",
            "with_btns": true,
            "help": "{{ messages.vw_helper }}",
  "unit": "vw"
          },
          {
            "class": "range",
            "name": "layout-pb",
            "min": 0,
            "max": 10,
            "step": 0.5,
            "label": "{{ messages.padding_bottom }} (vw)",
            "type": "number",
            "with_btns": true,
            "help": "{{ messages.vw_helper }}",
  "unit": "vw"
          }
        ]
      },
      {
        "type": "group",
        "name": "{{ messages.content_settings }}",
        "items": [
          {
            "class": "number",
            "name": "layout-content-max-width",
            "min": 400,
            "max": 2000,
            "label": "{{ messages.content_max_width }} (px)",
            "type": "number",
            "help": "{{ messages.px_helper }}",
  "unit": "px",
            "hide_mobile": true
          },
          {
            "class": "checkbox",
            "name": "layout-wide-content",
            "label": "{{ messages.wide_content }}",
            "value": null,
            "type": "checkbox",
            "hide_mobile": true
          },
          {
            "class": "checkbox",
            "name": "layout-edge",
            "label": "{{ messages.remove_padding_at_edges }}",
            "value": null,
            "type": "checkbox"
          }
        ]
      },
      {
        "type": "group",
        "name": "{{ messages.adaptive }}",
        "items": [
          {
            "class": "checkbox",
            "name": "hide-desktop",
            "label": "{{ messages.hide_desktop }}",
            "value": null,
            "type": "checkbox"
          },
          {
            "class": "checkbox",
            "name": "hide-mobile",
            "label": "{{ messages.hide_mobile }}",
            "value": null,
            "type": "checkbox"
          }
        ]
      }
    ]
  }
  